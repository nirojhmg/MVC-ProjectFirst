
@{
    ViewBag.Title = "SignIn";
}
@model Daribaba.ViewModels.SignInViewModel

@using Daribaba.Models

<div class="col-sm-4 col-sm-offset-1">
    <div class="login-form">
        <!--login form-->
        <h2>Login to your account</h2>
        @using (Html.BeginForm("SignIn", "Customer", FormMethod.Post))
        {
            <form action="#">
                @Html.LabelFor(m => m.CustomerName)
                @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control btmspace-15" })
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control btmspace-15" })
                <button type="submit" class="btn btn-default">Login</button>
            </form>
        }

    </div><!--/login form-->
</div>



